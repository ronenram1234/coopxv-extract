{
  "name": "coopxv-extract",
  "version": "1.0.0",
  "description": "CoopXV data extraction service - monitors Excel files and sends updates to MongoDB Atlas",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "install-service": "node dist/install-service.js",
    "uninstall-service": "node dist/uninstall-service.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build && pkg . --targets node18-win-x64 --output release/coopxv-extract.exe"
  },
  "keywords": [
    "coopxv",
    "excel",
    "mongodb",
    "data-extraction",
    "file-monitoring"
  ],
  "author": "Excelanti",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bull": "^4.12.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "mongoose": "^8.0.0",
    "node-cron": "^3.0.3",
    "node-windows": "^1.0.0-beta.8",
    "p-limit": "^4.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "pkg": {
    "assets": [
      "config/**/*",
      "node_modules/mongoose/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "release"
  }
}
